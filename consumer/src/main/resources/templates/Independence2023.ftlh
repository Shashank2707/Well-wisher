        }
        
        p {
            line-height: 1.6;
            margin-bottom: 15px;
        }
        
        .signature {
            font-weight: bold;
            text-align: left;
        }
       .tricolor-text {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            display: inline-block;
        }

        .saffron {
            color: #FF9933;
        }

        .white {
